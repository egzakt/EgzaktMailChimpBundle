{% macro input(name, key, type, value, class, size, required) %}
    <tr class="field_wrapper" id="field_wrapper_{{ key }}">
        <th>
            {% if required %}<span class="required">*</span>{% endif %} <label for="field{{ key }}">{{ name|trans }}</label> :
        </th>
        <td>
            <input id="field{{ key }}" type="{{ type|default('text') }}" name="fields{{ key }}" value="{{ value|e }}" class="{{ class|default('input_field') }}"{% if size %} size="{{ size }}"{% endif %} />
        </td>
    </tr>
{% endmacro %}

{% macro select(name, key, type, values, value, class, required) %}
    <tr class="field_wrapper" id="field_wrapper_{{ key }}">
        <th>
            {% if required %}<span class="required">*</span>{% endif %} <label for="field{{ key }}">{{ name|trans }}</label> :
        </th>
        <td>
            {% if (type == 'dropdown') %}
                <select id="field{{ key }}" name="fields{{ key }}" class="{{ class|default('select_field') }}">
                    {% for index, name in values %}
                        <option value="{{ name|e }}"{% if (value == name) %} selected="selected"{% endif %}>{{ name|trans }}</option>
                    {% endfor %}
                </select>
            {% elseif (type == 'checkboxes') %}
                <ul>
                {% for index, name in values %}
                    <li><input id="field{{ key }}_{{ index }}" type="checkbox" name="fields{{ key }}[]" value="{{ name|e }}" class="{{ class|default('checkbox_field') }}"{% if (value == name) %} checked="checked"{% endif %} /> <label for="field{{ key }}_{{ index }}">{{ name|trans }}</label></li>
                {% endfor %}
                </ul>
            {% endif %}
        </td>
    </tr>
{% endmacro %}