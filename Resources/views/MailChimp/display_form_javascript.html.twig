{% block subscriber_javascript %}
    <script type="text/javascript">
        $(function(){
            if ($.datepicker) {
                $('.calendar').datepicker({
                    showAnim: 'fadeIn',
                    dateFormat: 'yy-mm-dd',
                    firstDay: 7
                });

                var locale = '{{ app.request.locale }}';
                $.datepicker.setDefaults($.datepicker.regional[locale]);
            }
        });

        $('#mailchimp_form_{{ id }}').submit(function(e){
            e.preventDefault();

            $.ajax({
                url: $(this).attr('action'),
                dataType: 'json',
                data: $(this).serialize(),
                type: 'POST',
                success: function(response){
                    if (response.error) {
                        html = '<ul>';

                        // Errors
                        for(index in response.errorMessage) {
                            html = html + '<li>' + response.errorMessage[index] + '</li>';
                        }

                        html = html + '</ul>';
                        $('#mailchimp_wrapper_{{ id }} .error_message').html(html).show();
                    }
                    else {
                        $('#mailchimp_wrapper_{{ id }} .error_message').hide();
                        $('#mailchimp_form_{{ id }}').replaceWith('<div id="success_message">{% trans %}You have successfully subscribed to our newsletter.{% endtrans %}</div>');
                    }
                }
            });
        });
    </script>
{% endblock subscriber_javascript %}